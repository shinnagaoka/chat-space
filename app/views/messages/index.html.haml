.wrapper

	= render 'shared/side_bar'

	-#chat
	.chat
		-#header
		.header
			.header__left
				.header__left__title
					= @group.name
				%ul.header__left__members
					Member :
					%li.member
						taro
					%li.member
						ziro
					%li.member
						saburo
			.header__right
				=link_to "Edit" , edit_group_path(@group) , class: 'header__right__botton'
		.messages
			- @messages.each do |message|
				.message
					.top-message
						.top-message__user-name
							= message.user.name
						.top-message__date
							= message.created_at
					.under-message
						.under-message__content
							%p
								= message.content
							- if message.image != ""
								= image_tag message.image

		.form
			= form_for [@group, @message] do |f|
				= f.text_field :content, class: "form__message" ,placeholder: "type a message"
				.form__mask
					%label.form__mask__image
						%i.fa.fa-picture-o
						= f.file_field :image, class: "hidden"
						= f.hidden_field :image_cache
				= f.submit class: "form__submit", value:  "Send"
