.side-bar
	-# header
	.header
		%h3.header__name
			= current_user.name
		%ul.header__lists
			%li.list
				= link_to new_group_path do
					%i.fa.fa-pencil-square-o
			%li.list
				= link_to edit_user_path(current_user) do
					%i.fa.fa-cog
	.groups
		- current_user.groups.each do |group|
			.group
				.group__name
					= group.name
				.group__message
					新着メッセージ

